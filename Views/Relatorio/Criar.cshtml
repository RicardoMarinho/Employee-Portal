
@{
    ViewData["Title"] = "Registar relatório diário";
    Layout = "~/Views/Shared/_Layout_Master.cshtml";
}

<div class="col-lg-12">
    <div class="block">
        <div class="block-body">
            <form class="form" action="/Relatorio/Criar" method="post" autocomplete="off">
                <div class="form-inline">
                    <label class="pr-3">Tipo de relatorio</label>
                    <select name="_uidfkTipoRelatorio" class="form-control col-md-2">
                        @{
                            var tipoRelatorio = ViewBag.TipoRelatorio;
                            foreach (var value in tipoRelatorio)
                            {
                                var isDefault = (value._designacao == "Normal") ? " selected " : "";
                                <option value="@value._uidTipoRelatorio" @isDefault>@value._designacao</option>
                            }
                        }
                    </select>
                    <label class="pl-5 pr-3">Data</label>
                    <input type="text" name="_data" id="datepickerRelatorio" class="form-control col-md-2">
                    <input type="hidden" name="_uidfkColaborador" value="@ViewBag.Conta._uidColaborador" />
                </div>
                <div class="line block"></div>
                <div class="form-inline">
                    <label class="pr-3">Hora inicial</label>
                    <input type="text" id="hInicial" name="_horaInicial" class="col-md-1  form-control">
                    <label class="pl-5 pr-3">Hora Final</label>
                    <input type="text" id="hFinal" name="_horaFinal" class="col-md-1 form-control">
                    <label class="pl-5 pr-3">Hora Pausa Inicial</label>
                    <input type="text" id="hPInicial" name="_horaPausaInicial" class="col-md-1 form-control">
                    <label class="pl-5 pr-3">Hora Pausa Final</label>
                    <input type="text" id="hPFinal" name="_horaPausaFinal" class="col-md-1 form-control">
                </div>
                <div class="line block"></div>
                <div class="row">
                    <label class="col-sm-6 form-control-label">Tarefa</label>
                    <div class="col-sm-12">
                        <div class="form-group-material">
                            <input id="tarefa" type="text" name="_tarefa" required class="input-material">
                            <label for="tarefa" class="label-material">Descrição da tarefa</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar alterações" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>