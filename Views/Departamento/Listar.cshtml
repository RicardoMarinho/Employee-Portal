
@{
    ViewData["Title"] = "Lista de departamentos";
    Layout = "~/Views/Shared/_Layout_Master.cshtml";
}

<div class="col-lg-6">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" id="successMessage">@TempData["Success"]</div>
    }
    <div class="block">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Departamento</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var i = 1;
                        try
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td scope="row">@i</td>
                                    <td>@item._departamento</td>
                                </tr>
                                i++;
                            }
                        }
                        catch
                        {
                            <tr>
                                <td>Não existem departamentos criados.</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

